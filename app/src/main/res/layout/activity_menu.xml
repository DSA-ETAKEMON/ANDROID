<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.jonatan.eetakemongo.MenuAct"
    android:background="@color/cast_intro_overlay_button_background_color">


    <Button
        android:text="PERFIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/btPerfil"
        android:layout_marginTop="40dp"
        style="@style/Widget.AppCompat.Button"
        android:onClick="onClickPerfil"
        android:layout_below="@+id/btEetakedex"
        android:layout_alignLeft="@+id/btEetakedex"
        android:layout_alignStart="@+id/btEetakedex"
        android:textSize="20sp"
        android:background="@drawable/cast_expanded_controller_actionbar_bg_gradient_light"
        android:backgroundTint="@color/cast_expanded_controller_text_color" />

    <Button
        android:text="EETAKEDEX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btEetakedex"
        style="@style/Widget.AppCompat.Button"
        android:ems="10"
        android:onClick="onClickEetakedex"
        android:layout_below="@+id/btCazar"
        android:layout_alignLeft="@+id/btCazar"
        android:layout_alignStart="@+id/btCazar"
        android:textSize="20sp"
        android:background="@drawable/cast_expanded_controller_actionbar_bg_gradient_light"
        android:backgroundTint="@color/cast_expanded_controller_text_color" />

    <Button
        android:text="RANKING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:ems="10"
        android:onClick="onClickRanking"
        android:layout_below="@+id/btPerfil"
        android:layout_alignLeft="@+id/btPerfil"
        android:layout_alignStart="@+id/btPerfil"
        android:textSize="20sp"
        android:background="@drawable/cast_expanded_controller_actionbar_bg_gradient_light"
        android:backgroundTint="@color/cast_expanded_controller_text_color" />

    <Button
        android:text="WIKILIST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btWikilist"
        style="@style/Widget.AppCompat.Button"
        android:ems="10"
        android:onClick="onClickWikilist"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textSize="20sp"
        android:background="@drawable/cast_expanded_controller_actionbar_bg_gradient_light"
        android:backgroundTint="@color/cast_expanded_controller_text_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pokeball"
        android:id="@+id/imageView4"
        android:layout_toLeftOf="@+id/btCazar"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:layout_toStartOf="@+id/btCazar"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btPerfil" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/etakedex1"
        android:id="@+id/imageView5"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:layout_above="@+id/btWikilist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_toLeftOf="@+id/btCazar"
        android:layout_toStartOf="@+id/btCazar" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/iconouser"
        android:id="@+id/imageView6"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:layout_alignTop="@+id/btEetakedex"
        android:layout_toStartOf="@+id/btPerfil"

        android:layout_alignBottom="@+id/button3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/usericono"
        android:id="@+id/imageView7"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_toStartOf="@+id/btPerfil"
        android:layout_alignTop="@+id/btPerfil"
        android:layout_alignBottom="@+id/btWikilist"
        android:layout_toLeftOf="@+id/btPerfil" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/iconolista"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:id="@+id/btnRedondo"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:text="X"
        android:textColor="#000000"
        android:background="@drawable/boton_redondo"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:textAllCaps="false"
        android:onClick="onClickBack" />

    <Button
        android:text="CAZAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:id="@+id/btCazar"
        android:ems="10"
        style="@style/Widget.AppCompat.Button"
        android:onClick="onClickCazar"
        android:textSize="20sp"
        android:background="@drawable/cast_expanded_controller_actionbar_bg_gradient_light"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:backgroundTint="@color/cast_expanded_controller_text_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

</RelativeLayout>
