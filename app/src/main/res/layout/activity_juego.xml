<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_juego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.jonatan.eetakemongo.JuegoAct">

    <Button
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fiveBT"
        android:layout_alignTop="@+id/fourBT"
        android:layout_toRightOf="@+id/fourBT"
        android:layout_toEndOf="@+id/fourBT"
        android:onClick="onClickBT5"
        android:textSize="30sp" />

    <Button
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/threeBT"
        android:layout_alignBottom="@+id/twoBT"
        android:layout_toRightOf="@+id/twoBT"
        android:layout_toEndOf="@+id/twoBT"
        android:layout_alignTop="@+id/twoBT"
        android:onClick="onClickBT3"
        android:textSize="30sp" />

    <Button
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fourBT"
        android:layout_below="@+id/oneBT"
        android:layout_alignLeft="@+id/oneBT"
        android:layout_alignStart="@+id/oneBT"
        android:onClick="onClickBT4"
        android:textSize="30sp" />

    <Button
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/twoBT"
        android:layout_above="@+id/fiveBT"
        android:layout_toRightOf="@+id/oneBT"
        android:layout_toEndOf="@+id/oneBT"
        android:onClick="onClickBT2"
        android:textSize="30sp" />

    <Button
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/sixBT"
        android:layout_below="@+id/threeBT"
        android:layout_toRightOf="@+id/fiveBT"
        android:layout_toEndOf="@+id/fiveBT"
        android:onClick="onClickBT6"
        android:textSize="30sp" />

    <Button
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="91dp"
        android:id="@+id/oneBT"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickBT1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnRedondo"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:text="X"
        android:textColor="#000000"
        android:background="@drawable/boton_redondo"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:textAllCaps="false"
        android:onClick="onClickBack" />

    <TextView
        android:text="Se ha generado un número aleatorio automáticamente, para cazar el Eetakemon, tienes que adivinar el número con 3 intentos, SUERTE!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fiveBT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

</RelativeLayout>
