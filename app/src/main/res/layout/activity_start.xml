<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.jonatan.eetakemongo.StartAct">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="704dp"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/fondo">

        <ImageView
            android:layout_width="475dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logotipo"
            android:id="@+id/imageView3" />

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:weightSum="1">

            <Button
                android:id="@+id/dummy_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:text="START"
                android:textColorLink="?attr/colorBackgroundFloating"
                tools:textColor="@color/cast_expanded_controller_text_color"
                android:textSize="@dimen/cast_intro_overlay_focus_radius"
                android:textAlignment="center"
                android:typeface="monospace"
                android:onClick="OnClickStart"
                android:layout_weight="0.05" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
