<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ranking_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.jonatan.eetakemongo.RankingAdapter">

    <ImageView
        android:id="@+id/icono"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:contentDescription="logo del etakemon"
        android:src="@drawable/electrico" />

    <TextView
        android:text="TIPO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userPuntuacion"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignBottom="@+id/icono"
        android:layout_toRightOf="@+id/icono"
        android:layout_toEndOf="@+id/icono" />

    <TextView
        android:text="PIKACHU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNick"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_above="@+id/etakemonTipo"
        android:layout_alignLeft="@+id/etakemonTipo"
        android:layout_alignStart="@+id/etakemonTipo"
        android:layout_marginBottom="19dp"
        android:textSize="20sp" />

</RelativeLayout>
